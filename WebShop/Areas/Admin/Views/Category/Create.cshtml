@model WebShop.Models.Category
@{
    ViewData["Title"] = "Create Category";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center font-weight-light my-2">
                        <i class="fas fa-plus-circle me-2"></i>Create New Category
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                            <label asp-for="Name" class="form-label">Category Name</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="Status" class="form-select">
                                <option value="1">Active</option>
                                <option value="0">Inactive</option>
                            </select>
                            <label asp-for="Status" class="form-label">Category Status</label>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        @if (ViewData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                @ViewData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Create Category
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small text-muted">Create a new category for your product lineup</div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Optional: Add client-side validation
            $('form').validate({
                rules: {
                    Name: {
                        required: true,
                        minlength: 2,
                        maxlength: 50
                    }
                },
                messages: {
                    Name: {
                        required: "Please enter a category name",
                        minlength: "Category name must be at least 2 characters",
                        maxlength: "Category name cannot exceed 50 characters"
                    }
                }
            });
        });
    </script>
}

<style>
    body {
        background-color: #f4f6f9;
    }

    .card {
        transition: transform 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02);
        }
</style>