@using WebShop.Areas.Customer.ViewModels
@model OrderVM

<h2>Chi tiết đơn hàng</h2>
<p><strong>Order ID:</strong> @Model.OrderID</p>
<p><strong>Ngày tạo:</strong> @Model.DateCreate.ToString("dd/MM/yyyy HH:mm")</p>
<p><strong>Trạng thái:</strong> @Model.Status</p>

<h3>Sản phẩm trong đơn hàng</h3>
<div class="table-responsive cart_info">
    <table class="table table-condensed">
        <thead>
            <tr class="cart_menu">
                <td class="image">Item</td>
                <td class="description">Description</td>
                <td class="price text-center ">Price</td>
                <td class="quantity text-center">Quantity</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td class="cart_product">
                        <img src="~/images/product/@item.ImageUrl" style="width: 100px; height: auto;" alt="">
                    </td>
                    <td class="cart_description ">
                        <h4><a asp-area="Customer" asp-controller="Product" asp-action="Detail" asp-route-Name="@item.ProductName">@item.ProductName</a></h4>
                        <p>Product ID: @item.ProductId</p>
                    </td>
                    <td class="cart_price text-center align-middle">
                        <p>$ @item.Price</p>
                    </td>
                    <td class="cart_quantity text-center align-middle">
                        <div class="cart_quantity">
                            <span class="cart_quantity_display" style="font-size:15px" data-price="@item.Price">@item.Quantity</span>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a href="@Url.Action("Index", "Order")">Quay lại danh sách đơn hàng</a>
