@model IEnumerable<WebShop.Models.Brand>
<div class="card-header bg-secondary bg-gradient ml-0 py-3">
	<div class="row">
		<div class="col-12 text-center">
			<h2 class="text-white py-2">List Brand</h2>
		</div>
	</div>
</div>
<div class="card-body">
	<div class="row pb-3">
		<div class="col-6">
			<!-- Left side content if needed -->
		</div>
		<div class="col-6 text-end">
			<a asp-action="Create" asp-controller="Product" class="btn btn-create">
				<i class="bi bi-plus-circle"></i> Create New Brand
			</a>
		</div>
	</div>
</div>
<table class="table">
	<thead>
		<tr>
			<th scope="col">Id</th>
			<th scope="col">Name</th>
			
			<th scope="col">Status</th>
			<th style="width: 250px;">Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Brand item in Model)
		{
			<tr>
				<th scope="row">@item.Id</th>
				<td>@item.Name</td>
			
				<td>@item.Status</td>
				<td>
					<div class="btn-group" role="group">
						<a asp-controller="Brand" asp-action="Edit" asp-route-id="@item.Id"
						   class="btn btn-primary btn-sm btn-lg">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<form asp-controller="Brand" asp-action="Delete" asp-route-id="@item.Id"
							 method="post" class="d-inline">
							<button type="submit" class="btn btn-danger btn-sm ms-1 btn-lg"
									onclick="return confirm('Are you sure you want to delete this brand?');">
								<i class="bi bi-trash-fill"></i> Delete
							</button>
						</form>
					</div>
				</td>
			</tr>
		}

	</tbody>
</table>

<style>
	.btn-primary {
		width:100px;
		color: #fff;
		background-color: #192E2F;
		border-color: #192E2F;
	}

	.btn-danger {
		width:100px;
		color: #fff;
		background-color: #CA1929;
		border-color: #CA1929;
	}

	.btn-create{
		margin-top:20px;
		background-color: #eb8f34;
		border-color: #eb8f34;
	}
</style>