@using WebShop.Areas.Customer.Models
@model List<Order>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách đơn hàng</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 8px;
            border: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h2>Danh sách đơn hàng</h2>

    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Ngày tạo</th>
                <th>Trạng thái</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderID</td>
                    <td>@order.DateCreate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@order.Status</td>
                    <td>
                        <a href="@Url.Action("OrderDetails", "Order", new { orderId = order.OrderID })">Xem chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
